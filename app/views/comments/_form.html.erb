<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
		<font color="red"><h4>Oj, liczba błędów: <%= pluralize(@comment.errors.count, "error") %></h4>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
		</font>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Nick" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Adres e-mail" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label "Komentarz" %><br />
    <%= f.text_area :body, :size=>"10" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

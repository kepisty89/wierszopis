<%= div_for comment do %>
<h3>
  <%= comment.name %> &lt;<%= comment.email %>&gt; said:
  <% if @poem.owned_by? current_user %>
  <span class='actions'>
    <%= link_to 'Delete', [@poem, comment], :confirm => 'Are you sure?', :method => :delete %>
  </span>
  <% end %>
</h3>
<%= comment.body %>
<% end %>

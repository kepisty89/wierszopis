<h1>Login</h1>

<%= form_tag session_path do %>
<div class="field">
  <%= label_tag 'Email or Nickname' %><br />
  <%= text_field_tag :email %>
</div>
<div class="field">
  <%= label_tag :password %>
  <%= password_field_tag :password %>
</div>
<div class="actions">
  <%= submit_tag 'Login' %>
</div>
<% end %>

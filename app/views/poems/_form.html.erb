<%= form_for(@poem) do |f| %>
  <% if @poem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@poem.errors.count, "error") %> prohibited this poem from being saved:</h2>

      <ul>
      <% @poem.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :chapter_id %><br />
    <%= select_tag "poem_chapter_id",
    options_from_collection_for_select(current_user.chapters.all,
    'id', 'name', @poem.chapter_id),:include_blank => true, :name => "poem[chapter_id]"  %>
  </div>
  <div class="field">
    <%= f.label :composed_at %><br />
    <%= f.date_select :composed_at, :order => [:day, :month, :year],
    :start_year => Time.now.year - 100, :end_year => Time.now.year %>
  </div>
  <div class="actions">
    <%= submit_or_cancel(f) %>
  </div>
<% end %>

<body>
<div id="templatemo_wrapper_01">
<div id="templatemo_wrapper_02">

    <div id="templatemo_header">
    	<div id="site_title">
		<% if logged_in? %>
		
		<a href="/poems"><strong><i><%= current_user.nickname + "," + " wyraź siebie!" %></i></strong></a>

		<% else %>		
		 <a href="/poems"><i>Wyraź siebie...</i></a>
		<% end %>
           
        </div>
        
        <div id="header_right">
        	
            <a href="#" class="button twitter"></a>
            <a href="#" class="button mail"></a>
            <a href="#" class="button rss"></a>
            
            <div id="search_box">
            	<% form_tag "/poems/find" do %>
            	<%= text_field_tag :search_string %>
            	<%= submit_tag "Znajdź wiersz" %>
            	<% end %>

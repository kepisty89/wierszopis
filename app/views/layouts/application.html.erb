                -->
            </div>
        
            <div id="templatemo_menu">
                <ul>
			<% if logged_in? %>

		    <li><%= link_to "Wyloguj", logout_path %></li>
                    <li><%= link_to "Profil", profile_path(current_user) %></li>
		    <li><%= link_to "Konto", user_path(current_user) %></li>
		    <!-- Rozdzialy znajda sie w innej skcji <li><%= link_to "Rozdziały", user_chapters_path(current_user)  %></li> -->

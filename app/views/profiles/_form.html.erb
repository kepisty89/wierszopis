<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
	<font color="red"><h4>Oj, liczba błędów: <%= pluralize(@profile.errors.count, "error") %></h4>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
     </font>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Imię" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "Nazwisko" %><br />
    <%= f.text_field :surname %>
  </div>

  <div class="field">
    <%= f.label "Miasto" %><br />
    <%= f.text_field :place %>
  </div>
  <br/>

  <div class="field">
    <%= f.label "Data urodzenia" %><br />
    <%= f.date_select :birthday %>
  </div>
  <br/>

  <div class="field">
    <%= f.label "Płeć" %><br />
    <%= f.text_field :gender, :size=>"10" %>
  </div>
  <br/>

  <div class="field">
    <%= f.label "Strona WWW" %><br />
    <%= f.text_field :site %>
  </div>
  <br/>

  <div class="field">
    <%= f.label "O mnie" %><br />
    <%= f.text_area :bio, :size=>"60x7" %>
  </div>
  <br/>

  <div class="actions">
    <%= image_submit_tag("accept.png") %> (akceptuj) <br/>
    <a href="javascript:history.go(-1);"><%= image_tag 'back.png' %></a> (powrót) <br/>
  </div>
  <br/>

<% end %>

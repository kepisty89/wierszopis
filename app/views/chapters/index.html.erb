<h2>Rodziały</h2>

<div id="poems">



<table width="560">
  <tr>
    <th width="160px">Rodział</th>
    <th width="160px">Opis</th>
    <th></th>
    <th></th>
    <th>Opcje</th>
  </tr>

<% @chapters.each do |chapter| %>
  <tr>
    <td width="160px" align="center"><%= chapter.name %></td>
    <td width="160px" align="center"><%= chapter.description %></td>
	<td width="200px"></td>
    <td>   <%= link_to image_tag("show.png"), user_chapter_path(current_user, chapter) %></td>
    <td>   <%= link_to image_tag("edit.png"), edit_user_chapter_path(current_user, chapter) %></td>
    <td>   <%= link_to image_tag("delete.png"), user_chapter_path(current_user, chapter), :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>

</table>

</div>

<br />


<%= form_for(@chapter) do |f| %>
  <% if @chapter.errors.any? %>
    <div id="error_explanation">
      <font color="red"><h4>Oj, liczba błędów: <%= pluralize(@chapter.errors.count, "error") %></h4>

      <ul>
      <% @chapter.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
     </font>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Nazwa" %><br />
    <%= f.text_field :name %>
  </div>
  <br/>

  <div class="field">
    <%= f.label "Opis"	 %><br />
    <%= f.text_area :description, :size => "80x20" %>
  </div>
  <br/>

  <div class="actions">
    <%= image_submit_tag("accept.png") %> (akceptuj) <br/>
    <a href="javascript:history.go(-1);"><%= image_tag 'back.png' %></a> (powrót) <br/>
    <%= link_to image_tag("index.png"), poems_path %> (spis wszystkich)
  </div>
  <br/>

<% end %>
